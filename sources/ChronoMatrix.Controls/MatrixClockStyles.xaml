<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.ChronoMatrix.Controls">

    <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" TrueValue="Visible" FalseValue="Hidden" />

    <Style TargetType="{x:Type local:MatrixClock}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MatrixClock}">

                    <Viewbox>
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <local:Digit46
                                Grid.Column="0"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value1}"
                                Margin="20 0" />

                            <local:Digit46
                                Grid.Column="1"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value2}"
                                Margin="20 0" />

                            <StackPanel
                                Grid.Column="2"
                                Orientation="Vertical"
                                VerticalAlignment="Center"
                                Margin="40 0"
                                Visibility="{TemplateBinding ColonOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <Ellipse
                                    Width="70"
                                    Height="70"
                                    Fill="Black"
                                    Margin="0 0 0 160"/>

                                <Ellipse
                                    Width="70"
                                    Height="70"
                                    Fill="Black"
                                    Margin="0 160 0 0"/>

                            </StackPanel>

                            <local:Digit46
                                Grid.Column="3"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value3}"
                                Margin="20 0" />

                            <local:Digit46
                                Grid.Column="4"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value4}"
                                Margin="20 0" />

                        </Grid>

                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>