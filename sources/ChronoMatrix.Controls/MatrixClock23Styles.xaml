<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.ChronoMatrix.Controls">

    <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" TrueValue="Visible" FalseValue="Collapsed" />

    <Style TargetType="{x:Type local:MatrixClock23}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MatrixClock23}">

                    <Viewbox>
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <local:Digit23
                                Grid.Column="0"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value1}"
                                Margin="20 0" />

                            <local:Digit23
                                Grid.Column="1"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value2}"
                                Margin="20 0" />

                            <local:Colon
                                Grid.Column="2"
                                IsOn="{TemplateBinding ColonOn}"
                                SpaceBetweenDots="200"
                                DotDiameter="50"/>

                            <local:Digit23
                                Grid.Column="3"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value3}"
                                Margin="20 0" />

                            <local:Digit23
                                Grid.Column="4"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value4}"
                                Margin="20 0" />

                            <local:Colon
                                Grid.Column="5"
                                IsOn="{TemplateBinding ColonOn}"
                                SpaceBetweenDots="200"
                                DotDiameter="50"
                                Visibility="{TemplateBinding ShowSeconds, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <local:Digit23
                                Grid.Column="6"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value5}"
                                Margin="20 0"
                                TransitionSpeed="100000"
                                Visibility="{TemplateBinding ShowSeconds, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <local:Digit23
                                Grid.Column="7"
                                ClockTemplate="{TemplateBinding ClockTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Value="{TemplateBinding Value6}"
                                Margin="20 0"
                                TransitionSpeed="100000"
                                Visibility="{TemplateBinding ShowSeconds, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        </Grid>

                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>