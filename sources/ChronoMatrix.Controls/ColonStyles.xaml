<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.ChronoMatrix.Controls">

    <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" TrueValue="Visible" FalseValue="Hidden" />

    <Style TargetType="{x:Type local:Colon}">
        <Setter Property="DotDiameter" Value="70" />
        <Setter Property="Margin" Value="80 0" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Colon}">

                    <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Visibility="{TemplateBinding IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <Ellipse
                            Width="{TemplateBinding DotDiameter}"
                            Height="{TemplateBinding DotDiameter}"
                            Fill="Black" />

                        <Ellipse
                            Width="{TemplateBinding DotDiameter}"
                            Height="{TemplateBinding DotDiameter}"
                            Fill="Black"
                            Margin="{TemplateBinding SecondDotMargin}" />

                    </StackPanel>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>